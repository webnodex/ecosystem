{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "production": [
      "default"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/.github/workflows/ci.yml"
    ]
  },
  "nxCloudId": "68339c504f856f4f91dd573a",
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json",
          "buildDepsName": "build-deps",
          "watchDepsName": "watch-deps"
        }
      }
    }
  ],
  "generators": {
    "@nx/plugin:plugin": {
      "linter": "eslint",
      "unitTestRunner": "vitest",
      "compiler": "swc",
      "e2eTestRunner": "none",
      "publishable": false,
      "useProjectJson": false
    },
    "@nx/js:library": {
      "bundler": "swc",
      "linter": "eslint",
      "publishable": false,
      "unitTestRunner": "vitest",
      "strict": true,
      "testEnvironment": "node"
    }
  }
}